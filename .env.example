# Django Configuration
DJANGO_SECRET_KEY=your-secret-key-here
DJANGO_DEBUG=False
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1,your-domain.railway.app

# Database (Railway will provide this automatically)
DATABASE_URL=postgresql://user:password@host:port/database

# Download Cleanup Settings
CLEANUP_DOWNLOADS_AFTER_HOURS=24
AUTO_CLEANUP_ENABLED=True
IMMEDIATE_CLEANUP_AFTER_DOWNLOAD=False

# Railway settings (set automatically)
PORT=8000

# Set to True if you want files deleted immediately after download
# Set to False to keep files for the specified hours above
